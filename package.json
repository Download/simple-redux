{
  "name": "sightmap-plus",
  "version": "0.0.1",
  "description": "Sightmap front end",
  "main": "index.js",
  "scripts": {
    "test": "mocha -u tdd --reporter spec --require babel-core/register",
    "lint": "eslint src webpack config.js paths.js",
    "coverage": "jest --coverage",
    "start": "node build/server/app",
    "dev": "npm run webpack:prebuild && parallelshell \"npm run webpack:watch:client\" \"npm run webpack:watch:server\" \"npm run server:watch\"",
    "webpack:watch:server": "webpack --watch --config webpack/webpack.server.config.js",
    "webpack:watch:client": "set NODE_ENV=webpack webpack-dev-server --hot --inline --config webpack/webpack.client.config.js",
    "webpack:build": "npm run webpack:build:client && npm run webpack:build:server",
    "webpack:prebuild": "webpack --config webpack",
    "webpack:build:client": "set NODE_ENV=production webpack --config webpack/webpack.client.config.js",
    "webpack:build:server": "set NODE_ENV=production webpack --config webpack/webpack.server.config.js",
    "server:watch": "node node_modules/supervisor/lib/cli-wrapper.js -w _tmp/server -n exit _tmp/server/app.js",
    "cleanup": "rm -rf ./build ./public/{app,vendor}*.js ./_tmp",
    "build": "npm run cleanup && npm run webpack:build",
    "postinstall": "npm run webpack:build"
  },
  "author": "Athan Clark <aclark@engrain.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "body-parser": "^1.14.2",
    "compression": "^1.6.1",
    "express": "^4.13.4",
    "ramda": "^0.19.1",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.0.6",
    "redux-actions": "^0.9.1",
    "redux-apis": "^0.12.2",
    "redux-fetch-api": "^0.4.0",
    "redux-promise-middleware": "^2.3.3",
    "redux-thunk": "^1.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.4.5",
    "babel-eslint": "^5.0.0-beta6",
    "babel-jest": "^6.0.1",
    "babel-loader": "^6.2.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-syntax-decorators": "^6.3.13",
    "babel-plugin-transform-decorators": "^6.4.0",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.16.1",
    "jsverify": "^0.7.1",
    "lodash.merge": "^4.0.1",
    "mocha": "^2.4.5",
    "parallelshell": "^2.0.0",
    "react-a11y": "^0.2.8",
    "react-transform-hmr": "^1.0.1",
    "supervisor": "^0.9.1",
    "webpack": "^1.12.12",
    "webpack-dev-server": "^1.14.1",
    "webpack-stats-plugin": "^0.1.1"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
